# Database Configuration (Neon PostgreSQL)
DATABASE_URL="xxx"
DIRECT_URL="xxx"

# Blockchain Configuration
# RPC endpoint for the blockchain network (e.g., Lisk Sepolia testnet)
BLOCKCHAIN_RPC_URL=https://rpc.sepolia-api.lisk.com
BLOCKCHAIN_CHAIN_ID=4202

# Smart Contract Addresses
STOMATRADE_CONTRACT_ADDRESS=0x...your_contract_address_here
IDRX_TOKEN_CONTRACT_ADDRESS=0x...your_idrx_token_address_here

# Platform Wallet (NEVER commit the actual private key to git!)
# This wallet will be used to sign transactions on behalf of the platform
# For example: farmer NFT minting, project approval, etc.
PLATFORM_WALLET_PRIVATE_KEY=0x...your_private_key_here

# Blockchain Transaction Settings
BLOCKCHAIN_CONFIRMATION_BLOCKS=1
BLOCKCHAIN_GAS_LIMIT_MULTIPLIER=1.2
BLOCKCHAIN_MAX_RETRIES=3

# Application
PORT=3000
NODE_ENV=development

# JWT Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# Privy Configuration (for wallet authentication)
PRIVY_APP_ID=your-privy-app-id
PRIVY_APP_SECRET=your-privy-app-secret
